{
  "manifest_version": 2,
  "name": "TF Refined Helper",
  "version": "1.2.6",
  "description": "is a utility that helps you quickly add (keys, Ref, Rec, Scrap) into the trade window without having to drag each Ref or keys manually, it also helps you keep track of how many keys or Ref you and the other party have left.",
  "icons": {
    "128": "images/icon128.png",
    "16": "images/icon16.png"
  },
  "content_scripts": [
    {
      "js": [
        "js/library/jquery-3.1.0.min.js",
        "js/library/bootstrap.min.js",
        "js/init.js",
        "js/backpack.js",
        "js/outpost.js",
        "js/profile.js",
        "js/trade_offer.js",
        "js/content.js"
      ],
      "matches": [
        "*://backpack.tf/classifieds*",
        "*://steamcommunity.com/tradeoffer/*",
        "*://steamcommunity.com/*/tradeoffers/sent/",
        "*://steamcommunity.com/id/*",
        "*://steamcommunity.com/profiles/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "Butaaa.inbox@gmail.com",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "permissions": [
    "bookmarks",
    "<all_urls>"
  ]
}