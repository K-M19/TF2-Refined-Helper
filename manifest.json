{
  "manifest_version": 3,
  "name": "TF2 Refined Helper",
  "version": "1.4.0",
  "description": "A utility that quickly adds keys, Ref, Rec, and Scrap to the trade window and tracks the remaining amounts for both you and the other party.",
  "icons": {
    "128": "images/icon128.png",
    "16": "images/icon16.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["js/page_runner.js"], 
      "matches": [
        "*://backpack.tf/*", 
        "*://steamcommunity.com/*"
      ] 
    }
  ],
  
  "content_scripts": [
    {
      "js": [
        "js/library/jquery-3.1.0.min.js",
        "js/library/bootstrap.min.js",
        "js/init.js",
        "js/backpack.js",
        "js/outpost.js",
        "js/profile.js",
        "js/trade_offer.js",
        "js/content.js"
      ],
      "matches": [
        "*://backpack.tf/classifieds*",
        "*://steamcommunity.com/tradeoffer/*",
        "*://steamcommunity.com/*/tradeoffers/sent/",
        "*://steamcommunity.com/id/*",
        "*://steamcommunity.com/profiles/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "Butaaa.inbox@gmail.com",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}